@{
    ViewBag.Title = "index";
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <title>Logowanie - Plan Nadnotecki Instytut UAM w Pile</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Style/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Style/css/main.css">
    <!--===============================================================================================-->
    <script src="~/Scripts/main.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script> <!--Jquery-->
</head>
<body class="body-login">

    <div class="limiter">
        <div class="container-login">
            <div class="wrap-login">
                <form class="login-form flex-sb flex-w">
                    <span class="login-form-title pd-bt30">
                        Logowanie
                    </span>

                    <span class="txt1 mg-bt">
                        Użytkownik
                    </span>
                    <div class="wrap-input m-b-36">
                        <input class="input" type="text" name="username">
                        <span class="focus-input"></span>
                    </div>

                    <span class="txt1 mg-bt">
                        Hasło
                    </span>
                    <div class="wrap-input mg-bt12">
                        <input class="input" type="password" name="pass">
                        <span class="focus-input"></span>
                    </div>

                    <div class="flex-sb-m w-full pd-bt30">
                        <div class="contact-form-checkbox">
                            <input class="input-checkbox" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox" for="ckb1">
                                Zapamiętaj
                            </label>
                        </div>

                        <div>
                            <a href="#" class="txt3">
                                Zapomniałeś hasła?
                            </a>
                        </div>
                    </div>

                    <div class="container-login-form-btn">
                        <button class="login-form-btn">
                            Zaloguj
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>

</body>
</html>