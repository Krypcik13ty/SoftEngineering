@model SoftEngineering.Models.Logging
@{
    Layout = "~/Views/Shared/_Page_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Style/main.css" rel="stylesheet" />
    <title></title>
</head>
<body>
    <div class="main">
        <div id="header_nav">
            <ul>
                <li>@Html.ActionLink("Timetable", "ManualTimetable", "Home")</li>
                <li>@Html.ActionLink("AdminPanel", "AdminPanel", "AdminPanel")</li>
                <li><a class="active" href="#">Zarządzanie kontem</a></li>
                <li>@Html.ActionLink("Contact", "Contact", "Contact")</li>
                <li class="logout"><a href="./LogOut">Wyloguj</a></li>
            </ul>
        </div>

        <div class="content_wrapper">
            <button type="button" class="dropdownpanel">ZMIANA HASŁA</button>
            <div class="zawartosc">
                @using (Html.BeginForm("Passchange", "Log", FormMethod.Post))
                {
                    <div class="PasswordCh">
                        <form>
                            <ul class="form-style-1">
                                <li>
                                    <label>
                                        Wpisz aktualne hasło:@Html.TextBoxFor(model => model.passcheck)
                                    </label>
                                </li>
                                <br />
                                <li>
                                    <label>
                                        Wpisz nowe hasło:@Html.TextBoxFor(model => model.Newpass)
                                    </label>
                                </li>
                                <br />
                                <li>
                                    <label>
                                        Powtórz nowe hasło:@Html.TextBoxFor(model => model.Newpasscheck)
                                    </label>
                                </li>
                                <li>
                                    <br />
                                    <input type="submit" value=" Zatwierdź " id="adjusting3" />
                                </li>
                            </ul>
                        </form>
                    </div>
                }
            </div>
            <button type="button" class="dropdownpanel">ZMIANA ADRESU EMAIL</button>
            <div class="zawartosc">
                <div class="PasswordCh">
                    <form>
                        <ul class="form-style-1">
                            <li>
                                <label>
                                    Wpisz aktualny email: <input type="text" name="subjectTime" id="adjusting7" />
                                </label>
                            </li>
                            <br />
                            <li>
                                <label>
                                    Wpisz nowy email: <input type="text" name="subjectTime" id="adjusting7" />
                                </label>
                            </li>
                            <br />
                            <li>
                                <label>
                                    Powtórz nowy email: <input type="text" name="subjectTime" id="adjusting7" />
                                </label>
                            </li>
                            <li>
                                <br />
                                <input type="submit" value=" Zatwierdź " id="adjusting3" />
                            </li>
                        </ul>
                    </form>
                </div>
            </div>

        </div>
        <div id="footer">
            <a class="footer_link" href="./Contact">Kontakt</a>
            <br />
            &copy; Nadnotecki Instytut UAM w Pile
            <br />
            <a class="footer_link" href="https://pila.amu.edu.pl/">Witryna Nadnoteckiego Instytutu UAM w Pile</a>
        </div>
    </div>
    <script>
        var coll = document.getElementsByClassName("dropdownpanel");


        for (i = 0; i < coll.length; i++) {
            coll[i].addEventListener("click", function () {
                for (var j = 0; j < coll.length; j++) {
                    coll[j].classList.remove("aktywowanie");
                    coll[j].nextElementSibling.style.display = "none";
                }

                this.classList.toggle("aktywowanie");
                var content = this.nextElementSibling;
                if (content.style.display === "block") {
                    content.style.display = "none";
                } else {
                    content.style.display = "block";
                }
            });
        }
    </script>
    <script>

        var active = document.getElementsByClassName('aktywowanie');
        if (active.length && active[0] !== this) {
            active[0].classList.remove('aktywowanie');
        }

    </script>
</body>
</html>
